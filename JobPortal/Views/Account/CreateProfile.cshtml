@model JobPortal.Models.UserProfile

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center mb-4">Create Profile</h2>
            <form asp-action="CreateProfile" method="post" class="p-4 border rounded shadow-sm bg-light">

                <div class="form-group">
                    <label asp-for="DateOfBirth" class="font-weight-bold"></label>
                    <input asp-for="DateOfBirth" type="date" class="form-control" />
                    <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="font-weight-bold"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="City" class="font-weight-bold"></label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Country" class="font-weight-bold"></label>
                    <input asp-for="Country" class="form-control" />
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="HighestQualification" class="font-weight-bold"></label>
                    <input asp-for="HighestQualification" class="form-control" />
                    <span asp-validation-for="HighestQualification" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="GraduationYear" class="font-weight-bold"></label>
                    <input asp-for="GraduationYear" type="number" class="form-control" />
                    <span asp-validation-for="GraduationYear" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Skills" class="font-weight-bold"></label>
                    <input asp-for="Skills" placeholder="Comma-separated skills" class="form-control" />
                    <span asp-validation-for="Skills" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary btn-block">Save Profile</button>
            </form>
        </div>
    </div>
</div>
