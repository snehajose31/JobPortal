@{
    ViewData["Title"] = "Home Page";
}

<style>
    .welcome-section {
        background: url('/Images/job.jpg') center/cover no-repeat,
                    linear-gradient(to right, rgba(0, 123, 255, 0.8), rgba(102, 16, 242, 0.8));
        color: #fff;
        padding: 50px 0;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        position: relative;
    }

    .welcome-section h1 {
        font-size: 3rem;
        font-weight: bold;
        margin-bottom: 20px;
        color: #ffeb3b;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .welcome-section p {
        font-size: 1.25rem;
        font-style: italic;
        color: #fff;
        max-width: 600px;
        margin: 0 auto;
        line-height: 1.5;
        padding: 20px;
        background: rgba(0, 0, 0, 0.4); /* darken the background for readability */
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }
</style>

<div class="welcome-section">
    <h1 class="display-4">Welcome To JobPortal</h1>
    <p>"Success is not final, failure is not fatal: It is the courage to continue that counts."</p>
</div>
