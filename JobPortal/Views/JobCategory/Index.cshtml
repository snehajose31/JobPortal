@model IEnumerable<JobPortal.Models.JobCategory>

@{
    ViewBag.Title = "Job Categories";
}

<h2>Job Categories</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@category.JobCategoryId" class="btn btn-warning">Edit</a>
                    <button class="btn btn-danger"
                            onclick="if(confirm('Are you sure you want to delete this category?')) location.href='@Url.Action("DeleteCategory", "JobCategory", new { id = category.JobCategoryId })'">
                        Delete
                    </button>
                </td>
            </tr>
        }

    </tbody>
</table>
