@model JobPortal.Models.JobApplication

@{
    ViewBag.Title = "Apply for Job";
}

<h2>Apply for Job</h2>

<form asp-action="Apply" method="post">
    <input type="hidden" asp-for="JobId" />

    <div class="form-group">
        <label asp-for="ApplicantName">Name</label>
        <input asp-for="ApplicantName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="ApplicantEmail">Email</label>
        <input asp-for="ApplicantEmail" type="email" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Submit Application</button>
</form>
